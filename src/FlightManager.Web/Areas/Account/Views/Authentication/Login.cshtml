@model UserLoginBindingModel 

@{
    ViewData["Title"] = "Вход";
}

<div class="row min-vh-100">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">
        <div class="w-100 py-5 px-md-5 px-xl-6 position-relative">
            <div class="mb-5">
                <h2>Здравейте отново!</h2>
            </div>
            <form method="post">
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label class="form-label">Потребителско име</label>
                    <input class="form-control" asp-for="Username" placeholder="Вашето потребителско име">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <div class="row">
                        <div class="col">
                            <label class="form-label">Парола</label>
                        </div>
                    </div>
                    <input class="form-control" asp-for="Password" placeholder="Парола" type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="loginRemember">
                        <label class="custom-control-label text-muted" for="loginRemember">
                            <span class="text-sm">Запомни ме</span>
                        </label>
                    </div>
                </div>
                <!-- Submit-->
                <button class="btn btn-lg btn-block btn-primary" type="submit">Вход</button>
                <hr class="my-4">
                <p class="text-center">
                    <small class="text-muted text-center">
                        По погрешка се оказахте тук? Върнете се в <a asp-action="Index" asp-controller="Home" asp-area="">началната страница</a>
                    </small>
                </p>
            </form>
        </div>
    </div>
    <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
        <div style="background-image: url('../img/login.png')" class="bg-cover h-100 mr-n3"></div>
    </div>
</div>