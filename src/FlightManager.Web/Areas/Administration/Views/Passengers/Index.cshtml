@model IEnumerable<FlightManager.Web.Areas.Flights.Models.Passengers.PassengerListingViewModel>

@{
    ViewBag.Title = "Пътници";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 py-5 text-center">
            <h5 class="text-muted mb-2"></h5>
            <h4>Пътници</h4>
            @if (!Model.Any())
            {
                <h5 class="text-primary">Все още няма резервации за този полет</h5>
            }
            else
            {
                <table class="table table-hover dt-responsive dataTable nowrap" id="dataTable">
                    <thead>
                    <tr>
                        <th scope="col">Име</th>
                        <th scope="col">Презиме</th>
                        <th scope="col">Фамилия</th>
                        <th scope="col">ЕГН</th>
                        <th scope="col"><i class="fas fa-phone fa-fw"></i></th>
                        <th scope="col">Билет</th>
                        <th scope="col"><i class="fas fa-globe-europe"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var passenger in Model)
                    {
                        <tr>
                            <td>@passenger.FirstName</td>
                            <td>@passenger.MiddleName</td>
                            <td>@passenger.LastName</td>
                            <td>@passenger.UniqueCitizenshipNumber</td>
                            <td>@passenger.PhoneNumber</td>
                            <td>@passenger.TicketType</td>
                            <td>@passenger.Nationality</td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
